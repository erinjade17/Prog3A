<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriEnergyConnect</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AgriEnergyConnect.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        
        <nav>
        <ul class="navbar-nav">
            @if (User.IsInRole("Farmer"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Farmer" asp-action="MyProducts">My Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Farmer" asp-action="AddProduct">Add Product</a>
                </li>
            }
            @if (User.IsInRole("Employee"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Employee" asp-action="ViewAllFarmers">View Farmers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Employee" asp-action="AddFarmer">Add Farmer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Employee" asp-action="FilterProducts">Filter Products</a>
                </li>
            }
        </ul>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AgriEnergyConnect - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
