@model IEnumerable<AgriEnergyConnect.Models.Farmer>

@{
    ViewData["Title"] = "All Farmers";
}

<h2>All Farmers</h2>

<p>
    <a asp-action="AddFarmer" class="btn btn-success">Add New Farmer</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Location</th>
            <th>Products</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var farmer in Model)
        {
            <tr>
                <td>@farmer.Name</td>
                <td>@farmer.Email</td>
                <td>@farmer.Phone</td>
                <td>@farmer.Location</td>
                <td>@farmer.Products?.Count() ?? 0</td>
            </tr>
        }
    </tbody>
</table>